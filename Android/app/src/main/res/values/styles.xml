<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.List" parent="AppTheme" />

    <style name="AppTheme.List.Row">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="AppTheme.List.SectionHeader">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.List.ItemTitle">
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorLightTextPrimary</item>
    </style>

    <style name="AppTheme.List.ItemSubtitle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">72sp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">72sp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Button.ColoredPrimary" parent="AppTheme.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text" parent="AppTheme" />

    <style name="AppTheme.Text.FullScreenErrorMessage">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.Text.Footnote">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <!-- Navigation styles -->
    <style name="AppTheme.Navigation" />
    <style name="AppTheme.Navigation.Light" parent="NavigationViewLight">
        <item name="navigationViewBannerBackground">@color/colorPrimaryDark</item>
    </style>
</resources>
