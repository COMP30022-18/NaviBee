<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>


    <style name="AppTheme.TranslucentActionBar">
        <item name="android:textColorPrimary">@color/colorDarkTextPrimary</item>
        <item name="colorPrimary">@color/translucentActionBarBackground</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.List" parent="AppTheme" />

    <style name="AppTheme.List.Row">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="AppTheme.List.TransitRow">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="AppTheme.List.TransitIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AppTheme.List.TransitPrimaryText">
        <item name="android:textColor">@color/colorLightTextPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.List.TransitSecondaryText">
        <item name="android:textColor">@color/colorLightTextSecondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.List.SectionHeader">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.List.ItemTitle">
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight" tools:targetApi="p">50sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorLightTextPrimary</item>
    </style>

    <style name="AppTheme.List.CardItemSubtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.List.ItemSubtitle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">72sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="AppTheme.Button">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:minHeight">72sp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Button.ColoredPrimary" parent="AppTheme.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.LargeTextFAB" parent="AppTheme.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Text" parent="AppTheme" />

    <style name="AppTheme.Text.FullScreenErrorMessage">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.Text.Footnote">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.BottomSheetMenu" parent="AppTheme" />

    <style name="AppTheme.BottomSheetMenu.Item">
        <!--<item name="android:layout_height">56dp</item>-->
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.BottomSheetMenu.Item.Text">
        <item name="android:textColor">@color/colorLightTextSecondary</item>
    </style>

    <style name="AppTheme.BottomSheetMenu.Item.Clickable">
        <item name="android:textColor">@color/colorLightTextPrimary</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.BottomSheetMenu.Item.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="AppTheme.HorizontalRule">
        <item name="android:height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <!-- Navigation styles -->
    <style name="AppTheme.Navigation" />

    <style name="AppTheme.Navigation.Light" parent="NavigationViewLight">
        <item name="navigationViewBannerBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ChipTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <declare-styleable name="Messaging">
        <attr name="layoutGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="center_horizontal" value="1" />
            <flag name="center_vertical" value="16" />
            <flag name="clip_horizontal" value="8" />
            <flag name="clip_vertical" value="128" />
            <flag name="end" value="8388613" />
            <flag name="fill" value="119" />
            <flag name="fill_horizontal" value="7" />
            <flag name="fill_vertical" value="112" />
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="8388611" />
            <flag name="top" value="48" />
        </attr>
        <attr name="visibleOnSelf">
            <flag name="visible" value="0" />
            <flag name="invisible" value="1" />
            <flag name="gone" value="2" />
        </attr>
        <attr name="visibleOnOther">
            <flag name="visible" value="0" />
            <flag name="invisible" value="1" />
            <flag name="gone" value="2" />
        </attr>
        <attr name="mirrorTextAlignment">
            <flag name="textStart" value="2"/>
            <flag name="textEnd" value="3"/>
        </attr>
        <attr name="bubbleBackground" format="reference"/>
        <attr name="primaryForeground" format="color"/>
        <attr name="secondaryForeground" format="color"/>
    </declare-styleable>

    <style name="AppTheme.Messaging"/>

    <style name="AppTheme.Messaging.Self">
        <item name="layoutGravity">end</item>
        <item name="visibleOnSelf">visible</item>
        <item name="visibleOnOther">gone</item>
        <item name="mirrorTextAlignment">textStart</item>
        <item name="bubbleBackground">@drawable/chat_sender_background</item>
        <item name="primaryForeground">@color/colorDarkTextPrimary</item>
        <item name="secondaryForeground">@color/colorDarkTextSecondary</item>
    </style>
    <style name="AppTheme.Messaging.Other">
        <item name="layoutGravity">start</item>
        <item name="visibleOnSelf">gone</item>
        <item name="visibleOnOther">visible</item>
        <item name="mirrorTextAlignment">textEnd</item>
        <item name="bubbleBackground">@drawable/chat_recipient_background</item>
        <item name="primaryForeground">@color/colorLightTextPrimary</item>
        <item name="secondaryForeground">@color/colorLightTextSecondary</item>
    </style>
</resources>
