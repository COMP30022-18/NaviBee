<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.DestinationDetailsActivity"
    android:fitsSystemWindows="true">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/navigation.destinations.details.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/navigation.destinations.details.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="@color/colorPrimary">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_collapseMode="pin">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/navigation.destinations.details.fab"
                    android:elevation="24dp"
                    app:layout_constraintTop_toTopOf="@id/navigation.destinations.details.place_name_row"
                    app:layout_constraintBottom_toTopOf="@id/navigation.destinations.details.place_name_row"
                    app:layout_constraintEnd_toEndOf="parent">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/navigation.destinations.details.fab_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabCustomSize="80dp"
                        android:layout_margin="16dp"
                        app:rippleColor="@color/white"
                        android:clickable="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:elevation="24sp"
                        android:text="@string/button_go"
                        android:textSize="30dp"
                        android:textColor="@android:color/primary_text_dark"
                        />
                </FrameLayout>

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/navigation.destinations.details.image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/collapsing_action_bar_height"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/navigation.destinations.details.place_name_row"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="0dp"
                    app:autoPlay="false"
                    app:strokeColor="#FFFFFFFF"
                    app:strokeWidth="1dp"/>

                <LinearLayout
                    android:id="@+id/navigation.destinations.details.place_name_row"
                    style="@style/AppTheme.List.Row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintTop_toBottomOf="@id/navigation.destinations.details.image_preview"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <TextView
                        android:id="@+id/navigation.destinations.details.place_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/AppTheme.List.ItemTitle"
                        tools:text="Place name"
                        app:layout_collapseMode="parallax"/>
                    <TextView
                        android:id="@+id/navigation.destinations.details.place_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/AppTheme.List.ItemSubtitle"
                        tools:text="Place address, could be a very long one, but whatever. Just a test."
                        app:layout_collapseMode="parallax" />
                </LinearLayout>

                <View
                    app:layout_constraintTop_toBottomOf="@id/navigation.destinations.details.place_name_row"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/navigation.destinations.details.toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation.destinations.details.recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />




</android.support.design.widget.CoordinatorLayout>