<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.transit_navigation.rv.trip_segment_extend_toggle"
    style="@style/AppTheme.List.TransitRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/navigation.transit_navigation.rv.trip_segment_extend_toggle.bar"
        android:layout_width="@dimen/transit_navigation_route_bar_width"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/transit_navigation_route_bar_middle"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent" />
    <LinearLayout
        android:id="@+id/navigation.transit_navigation.rv.trip_segment_extend_toggle.clickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">
        <ImageView
            android:id="@+id/navigation.transit_navigation.rv.trip_segment_extend_toggle.toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/ic_expand_more_black_24dp" />

        <TextView
            android:id="@+id/navigation.transit_navigation.rv.trip_segment_extend_toggle.text"
            style="@style/AppTheme.List.TransitSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:text="Ride 10 stops (5 mins)" />
    </LinearLayout>
</LinearLayout>