<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation.transit_navigation.rv.origin"
    style="@style/AppTheme.List.TransitRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        style="@style/AppTheme.List.TransitIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/iconTintOnLightBackground"
        android:alpha="0.8"
        app:srcCompat="@drawable/ic_location_on_black_24dp"
        tools:srcCompat="@drawable/ic_location_on_black_24dp" />
    <TextView
        android:id="@+id/navigation.transit_navigation.rv.origin.name"
        style="@style/AppTheme.List.TransitPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Starting location"/>
</LinearLayout>