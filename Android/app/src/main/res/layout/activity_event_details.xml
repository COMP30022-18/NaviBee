<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EventDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        >

        <View
            android:id="@+id/toolbar_padding"
            android:layout_width="match_parent"
            android:layout_height="@*android:dimen/status_bar_height"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@android:color/transparent" />

    </android.support.design.widget.AppBarLayout>

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/collapsing_action_bar_height"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="0dp"
        app:autoPlay="false"
        app:strokeColor="#FFFFFFFF"
        app:strokeWidth="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false"
        android:background="@color/white"
        app:behavior_peekHeight="600dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:fitsSystemWindows="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_chip_drawable"
        android:text="Hello, I'm a simple Chip!"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="80dp"
        android:layout_margin="@dimen/fab_margin"
        app:rippleColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_anchor="@+id/recycler_view"
        app:layout_anchorGravity="top|end" />

    <TextView
        android:id="@+id/fab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:elevation="24sp"
        android:text="@string/button_go"
        android:textSize="30sp"
        android:textColor="@android:color/primary_text_dark"
        app:layout_anchor="@id/fab"
        app:layout_anchorGravity="center"
        android:fitsSystemWindows="true" />

</android.support.design.widget.CoordinatorLayout>