<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.transit_navigation.rv.destination"
    style="@style/AppTheme.List.TransitRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        style="@style/AppTheme.List.TransitIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:tint="?attr/colorAccent"
        app:srcCompat="@drawable/ic_check_circle_black_24dp" />

    <TextView
        android:id="@+id/navigation.transit_navigation.rv.destination.name"
        style="@style/AppTheme.List.TransitPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Destination" />
</LinearLayout>