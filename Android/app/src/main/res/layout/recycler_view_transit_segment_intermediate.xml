<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop"
    style="@style/AppTheme.List.TransitRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.bar"
        android:layout_width="@dimen/transit_navigation_route_bar_width"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:src="@drawable/transit_navigation_route_bar_middle"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:alpha="0.6"
        android:src="@drawable/shape_circle"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.bar"
        app:layout_constraintStart_toStartOf="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.bar"
        app:layout_constraintTop_toTopOf="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.name"
        app:layout_constraintBottom_toBottomOf="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.name"/>

    <TextView
        android:id="@+id/navigation.transit_navigation.rv.trip_segment_intermediate_stop.name"
        style="@style/AppTheme.List.TransitSecondaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bus stop 1" />
</androidx.constraintlayout.widget.ConstraintLayout>