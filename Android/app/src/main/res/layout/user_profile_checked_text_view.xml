<?xml version="1.0" encoding="utf-8"?>

<au.edu.unimelb.eng.navibee.utils.CheckableConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/check_selector"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/userProfileCheckedTextView.avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:duplicateParentState="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:textColor="@color/check_text_selector"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userProfileCheckedTextView.avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem ipsum" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:duplicateParentState="true"
        app:layout_constraintBottom_toBottomOf="@+id/userProfileCheckedTextView.avatar"
        app:layout_constraintEnd_toEndOf="@+id/userProfileCheckedTextView.avatar"
        android:src="@drawable/check_foreground_selector" />
</au.edu.unimelb.eng.navibee.utils.CheckableConstraintLayout>
